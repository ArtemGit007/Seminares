// Напишите программу, которая по заданному номеру четверти, показывает диапазон возможных координат 
// точек в этой четверти (x и y).

Console.WriteLine(" Введите номер четверти");
int title = Convert.ToInt32(Console.ReadLine());

if(title == 1)
{
    Console.WriteLine(" Точка лежит в диапазоне х > 0 и у > 0 ");
}
else if(title == 2)
{
    Console.WriteLine(" Точка лежит в диапазоне х < 0, y > 0");
}

else if(title == 3)
{
    Console.WriteLine(" Точка лежит в диапазоне х< 0, y < 0");
}
else if(title == 4)
{
    Console.WriteLine(" Точка лежит в диапазоне х > 0, y < 0");
}
else
{
    Console.WriteLine(" Такой четверти не существует");
}
