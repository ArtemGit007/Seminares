//  Напишите программу, которая по заданным координатам (х и у), 
// показывает номер четверти. 

Console.WriteLine(" Bведите пременную х: ");
int x = Convert.ToInt32(Console.ReadLine());
Console.WriteLine(" Введите переменную y: ");
int y = Convert.ToInt32(Console.ReadLine());

if(x > 0 && y > 0)
{
    Console.WriteLine(" Точка лежит в первой четверти");
}
else if(x < 0&&y >0)
{
    Console.WriteLine(" Толчка лежит во второй четверти");
}
else if(x < 0&&y < 0)
{
    Console.WriteLine(" Точка лежит в третьей четверти");
}
else
{
    Console.WriteLine(" Точка лежит в четвертой четверти");
}
